<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<Pane fx:id="specialInviteMsgPane" style="-fx-background-color: #2f3136; -fx-background-radius: 10;" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DMController">
   <children>
      <HBox fx:id="specialInviteMsgHBox" alignment="CENTER_LEFT" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="53.0" prefWidth="801.0" spacing="20.0">
         <children>
            <Pane style="-fx-background-radius: 100;">
               <children>
                  <Circle fx:id="specialInviteMsgImageCircle" fill="#ff571f" layoutX="20.0" layoutY="22.0" radius="21.0" stroke="BLACK" strokeType="INSIDE" />
               </children>
            </Pane>
            <Label fx:id="specialInviteMsgTxtField" prefHeight="22.0" prefWidth="302.0" text="Your friend has invited you to join server :" textFill="WHITE" wrapText="true">
               <font>
                  <Font name="Comic Sans MS" size="15.0" />
               </font>
            </Label>
            <Label fx:id="inviteServerNameTxtFld" prefHeight="21.0" prefWidth="223.0" text="SERVER NAME" textFill="#5865f2">
               <font>
                  <Font name="System Bold" size="17.0" />
               </font>
            </Label>
            <Button mnemonicParsing="false" onMouseClicked="#acceptBtnClicked" style="-fx-background-color: #58f287;" text="Accept" />
            <Button layoutX="618.0" layoutY="21.0" mnemonicParsing="false" onMouseClicked="#declineBtnClicked" style="-fx-background-color: ED4245;" text="Decline" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
   </children>
</Pane>
